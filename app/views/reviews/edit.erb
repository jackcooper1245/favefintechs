<div class="container-fluid">
<form method='POST' action='/reviews/new' id="new-review">
  <div class="container">
  <div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
  <div class="card card-signin my-5">
  <div class="card-body" style="border: solid; border-color: #3AB795; color: #3AB795; background-color:#EDEAD0;">
  <h5 class="card-title text-center">Edit a Review</h5>

  <div class="form-group">
  <div class="form-group">
    <label for="reviewed_company">Company</label>
    <select class="form-control" name="reviewed_company">
    <%@fintechs.each do |fintech|%>
    <option><%=fintech.name%></option>
    <%end%>
    </select>
    or <a href="/fintechs/new">Create a New Company</a>
  </div>


      <label for="rating">Rating:</label>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="ratingCheckbox1" name="rating" value="1 Star">
          <label class="form-check-label" for="inlineCheckbox1">1</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="ratingCheckbox2" name="rating" value="2 Star">
          <label class="form-check-label" for="inlineCheckbox2">2</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="ratingCheckbox3" name="rating" value="3 Star">
          <label class="form-check-label" for="inlineCheckbox3">3</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="ratingCheckbox4"name="rating" value="4 Star">
          <label class="form-check-label" for="inlineCheckbox3">4</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" id="ratingCheckbox5" name="rating" value="5 Star">
          <label class="form-check-label" for="inlineCheckbox3">5</label>
        </div>

        <div class="form-group">
          <label for="content">Comments:</label>
          <textarea class="form-control" id="content" name="content" rows="3" form="new-review"></textarea>
        </div>

    <hr class="my-4">
      <button class="btn btn-lg btn-warning btn-block text-uppercase" type="submit">Submit</button>  </div>
    <hr class="my-4">
      <form action="/fintechs/<%= @review.id %>" method="post">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-lg btn-warning btn-block text-uppercase">Delete Review</button>

  </div>
  </div>
  </div>
  </div>
  </div>
 </form>
 </div>
