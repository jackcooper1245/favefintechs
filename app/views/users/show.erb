<div class="container-fluid">
<div class="container">
<div class="row">
<div class="col-lg-10 col-xl-9 mx-auto">
<div class="card card-signin my-5">
<div class="card-body" style=" background-color: #ebfbf4;">

  <h1 class="card-title text-center"><%= current_user.name %></h1>
  <hr class="my-4">
  
    <dl>
    <dd style="font-size: large;">Email: <%=current_user.email%></dd>
    <dd style="font-size: large;">Username: <%=current_user.username%></dd>
    </dl>
   <hr class="my-4">

    <h4>Posts created:</h4>
    <% @fintechs.each do |fintech|%>
    <% if current_user.id == fintech.user_id %>
    <div class="container">
    <a href="/fintechs/<%=fintech.id%>"><%=fintech.name%></a>
    </div>
    <%end%>
    <%end%>

  <hr class="my-4">
  <h4>Reviews created:</h4>
  <%@reviews.each do |review|%>
  <% if current_user.id == review.user_id %>
  <div class="container">
  <a href='/reviews/<%=review.id%>'><%=review.company_name%> - <%=review.created_at%></a>
  </div>
  <%end%>
  <%end%>

  <hr class="my-4">
  <a href="/users/<%=current_user.id%>/edit"><button type="submit" class="btn btn-warning">Edit profile</button></a>

</div>
</div>
</div>
</div>
</div>
</div>
