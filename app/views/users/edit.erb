<div class="container-fluid">
<form action="/<%=current_user.id%>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
<div class="container">
<div class="row">
<div class="col-lg-10 col-xl-9 mx-auto">
<div class="card card-signin my-5">
<div class="card-body" style=" color: #3AB795; background-color: #ebfbf4;">

  <h5 class="card-title text-center">Edit your profile:</h5>

  <h2>Edit your profile</h2>
  
    <div class="form-group">
      <input type="text" class="form-control"id="name" placeholder="<%=current_user.name%>" name="name">
    </div>
    <div class="form-group">
      <input type="text" class="form-control"id="username" placeholder="<%=current_user.username%>" name="username">
    </div>
    <div class="form-group">
      <input type="text" class="form-control"id="email" placeholder="<%=current_user.email%>" name="email" required>
    </div>
    <div class="form-group">
      <input type="text" class="form-control"id="pswd" placeholder="*************" name="pswd" required>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    
    <form action="/<%= current_user.id %>" method="post">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-warning">Delete</button
    </form>

</div>
</div>
</div>
</div>
</div>
</form>
</div>
