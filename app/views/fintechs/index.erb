<div class="container-fluid">
  <div class="table-responsive">
  <div class="col" style="background-color: #ebfbf4;">
<div class="table-responsive">
    <table class="table table-borderless table-hover" style="font-size: large;">
    <thead>
    <tr>
      <th>Company</th>
      <th>Founded</th>
      <th>Sector</th>
      <th>Founders</th>
      <th>Average Rating</th>
      <th>Website</th>
    </tr>
    </thead>
    <tbody>
      <%@fintechs.each do |fintech|%>
      <tr>
        <td><a href="/fintechs/<%=fintech.id%>"><%=fintech.name%></a></td>
        <td><%=fintech.founded%></td>
        <td><%=fintech.sector%></td>
        <td><%=fintech.founders%></td>

        <%@fintech_rating = []%>
        <%@reviews.each do |review|%>
        <%if review.fintech_id == fintech.id%>
        <%@fintech_rating << review.rating%>
        <%@rating = @fintech_rating.sum / @fintech_rating.size%>
        <%end%>
        <%end%>   
        <%if @reviews.find_by(fintech_id: fintech.id)%>
        <td><%=@rating%> / 5</td>
        <%else%>
        <td>Not yet reviewed</td>
        <%end%>

        <td><%=fintech.url%></td>
      </tr>
      <%end%>
    </tbody>
    </table>
  </div>
  </div>
  </div>
  </br>
<a href="/fintechs/new"><button type="submit" class="btn btn-warning">Create a new Fintech post</button></a>
</div>

