


 <form method='POST' action='/login'>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      </br>
       </br>
        <div class="container">
          <h1 class="my-auto"><%= @fintech.name%></h1>

          <%@fintech_rating = []%>
          <%@reviews.each do |review|%>
          <%if review.fintech_id == @fintech.id%>
            <%@fintech_rating << review.rating%>
            <%@rating = @fintech_rating.sum / @fintech_rating.size%>
              <%end%>
              <%end%>

          <h3>- Average Rating <%=@rating%>/5</h3>
           </br>
            <li>Founded: <%=@fintech.founded%></li>   
             <li>Sector: <%=@fintech.sector%></li>
              <li>Founders: <%=@fintech.founders%></li>
               <li>Company Website: <%=@fintech.url%></li>
                 <li>Created at: <%=@fintech.created_at%></li>
                 </br>
                 <h4>Reviews created:</h4>
                  <%@reviews.each do |review|%>
                    <% if @fintech.id == review.fintech_id %>
                     <div class="container">
                    <%=review.rating%>/5 - <a href='/reviews/<%=review.id%>'><%=review.company_name%> - <%=review.created_at%></a>
                   </div>
                    <%end%>
                      <%end%>   
                  </br>
                   </br>
                    </br>
                     </br>
                      </br>
                       </br>       
                       <button type="submit" class="btn-lg btn-primary btn-block"><a href="/reviews/new" class="text-white">Create a new Review</a></button>
                       </br>
                        <%if @fintech.user_id == current_user.id%>
                        <button type="submit" class="btn-lg btn-primary btn-block"><a class="text-white" href='/fintechs/<%=@fintech.id%>/edit'>Edit post</a></button>
                        </br>
                        </br>
                      </form>
                    </div>
                   <%end%>
                 </br>
                </div>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
