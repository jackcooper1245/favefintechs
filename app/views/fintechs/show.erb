<div class="container-fluid">
<div class="container">
<div class="row">
<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
<div class="card card-signin my-5">
<div class="card-body" style="border: solid; border-color: #3AB795; color: #3AB795; background-color:#EDEAD0;">

  <h1 class="card-title text-center"><%= @fintech.name%></h1>
  <hr class="my-4">

    <%@fintech_rating = []%>
    <%@reviews.each do |review|%>
    <%if review.fintech_id == @fintech.id%>
    <%@fintech_rating << review.rating%>
    <%@rating = @fintech_rating.sum / @fintech_rating.size%>
    <%end%>
    <%end%>
  <h3>- Average Rating <%=@rating%>/5</h3>
    <li>Founded: <%=@fintech.founded%></li>   
    <li>Sector: <%=@fintech.sector%></li>
    <li>Founders: <%=@fintech.founders%></li>
    <li>Company Website: <%=@fintech.url%></li>
    <li>Created at: <%=@fintech.created_at%></li>
  <hr class="my-4">

  <h3>Reviews created:</h3>
    <%@reviews.each do |review|%>
    <% if @fintech.id == review.fintech_id %>
    <div class="container">
    <%=review.rating%>/5 - <a href='/reviews/<%=review.id%>'><%=review.company_name%> - <%=review.created_at%></a>
    </div>
    <%end%>
    <%end%>   
  <hr class="my-4">
     
  <a href="/reviews/new" class="text-white"><button type="submit" class="btn-lg btn-warning btn-block">Create a new Review</button></a>
  <hr class="my-4">
  <%if @fintech.user_id == current_user.id%>
  <a  href='/fintechs/<%=@fintech.id%>/edit'><button type="submit" class="btn-lg btn-warning btn-block">Edit post</button></a>
  <%end%>

</div>
</div>
</div>
</div>
</div>
</div>