<form action="/fintechs/<%= @fintech.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
  <div class="container">
  <div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
  <div class="card card-signin my-5">
  <div class="card-body">

    <h5 class="card-title text-center">Edit a Post:</h5>
    <hr class="my-4">
    <div class="form-group">
      <label for="fintechname">Name of Company:</label>
      <input type="text" id="fintechname" class="form-control"  placeholder="Enter Company Name" name="fintechname" required>
    </div>
    <div class="form-group">
      <label for="fintechname">Founded:</label>
      <input type="text" id="founded" class="form-control"  placeholder="Enter Year Founded" name="founded" required>
    </div>
    <div class="form-group">
      <label for="sector">Sector:</label>
      <input type="text" id="sector" class="form-control"  placeholder="Enter Company Sector"name="sector" required>
    </div>
    <div class="form-group">
      <label for="founders">Founder(s):</label>
      <input type="text" id="sector" class="form-control"  placeholder="Enter Company Founders"name="founders" required>
    </div>
    <div class="form-group">
      <label for="url">Company Url:</label>
      <input type="text" id="sector" class="form-control"  placeholder="Copy the URl to the Company's website"name="url" required>
    </div>

    <hr class="my-4">

    <button type="submit" class="btn btn-lg btn-primary btn-block text-uppercase">Create</button>

    <hr class="my-4">

    <form action="/fintechs/<%= @fintech.id %>" method="post">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-lg btn-primary btn-block text-uppercase">Delete Post</button>
    </form>

  </div>
  </div>
  </div>
  </div>
  </div>
</form>
